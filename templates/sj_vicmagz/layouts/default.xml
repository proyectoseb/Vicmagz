<?xml version="1.0" encoding="utf-8"?>
<!--
Responsive Grid: You can customize class suffix.
	col-lg		: Large devices Desktops 			 			  (≥1200px)
	col-md		: Medium devices Desktops  			 			  (≥922px)
	col-sm 		: Small devices Tablets				 			  (≥768px)
	col-xs 		: Extra small devices Phones	     			  (<768px)
	
Support Classes : The solution is hidden module and position on desktop,tablets & mobile. You can add class suffix.
	hidden-lg	: Hidden on Large devices Desktops 			  (≥1200px)
	hidden-md	: Hidden on Medium devices Desktops  		  (≥922px)
	hidden-sm 	: Hidden on Small devices Tablets			  (≥768px)
	hidden-xs 	: Hidden on Extra small devices Phones	      (<768px)
	
Example: Set columns  on Mobile, tablet, desktops
	Use the extra small and medium device grid classes by adding .col-xs-* .col-md-* to your columns. 
	The full description of the syntax is available on the classes (http://getbootstrap.com/css/#grid-example-mixed-complete) 
-->

<layout type="lmr">	
	
	<groups>
		<group class="col-md-4 col-sm-12" >left</group>
		<group class="col-md-4 col-sm-12" >right</group>
		<group 
			class="col-md-4 col-sm-12" 
			noright-class="col-md-8 col-sm-12"
			noleft-class="col-md-8 col-sm-12"
			noleftright-class="col-md-12 col-sm-12">main</group>
	</groups>
	<blocks>	
		<spotlight1 html5tag="section" order="1" id="yt_spotlight1">
			<positions>
				<position class="col-sm-6 hidden-xs" type="modules" style="ytmod" >top1</position>
				<position class="col-sm-6" type="modules" style="ytmod" >top2</position>
			</positions>
		</spotlight1>
		<header html5tag="header" order="2" id="yt_header" autosize="0">
			<positions>	
				<position class="col-sm-12"  type="feature">@logo</position>				
			</positions>
		</header>
		<menu html5tag="section" order="3" id="yt_menu" autosize="0">
			<positions>	
				<position class="col-md-12" type="feature">@mainmenu</position>					
			</positions>
		</menu>
		<spotlight2 html5tag="section" order="4" id="yt_spotlight2">
			<positions>
				<position class="col-sm-12" type="modules" style="ytmod" >slideshow</position>
			</positions>
		</spotlight2>
		<spotlight3 html5tag="section" order="5" id="yt_spotlight3">
			<positions>
				<position class="col-sm-12" type="modules" style="ytmod" >position1</position>
			</positions>
		</spotlight3>
		<spotlight4 html5tag="section" order="6" id="yt_spotlight4">
			<positions>
				<position class="col-sm-12" type="modules" style="ytmod" >position2</position>
			</positions>
		</spotlight4>
		<breadcrumb html5tag="section" order="7" id="yt_breadcrumb">
			<positions>
				<position   class="col-sm-12" type="modules"  style="ytmod" >breadcrumb</position>
			</positions>
		</breadcrumb>
		<content html5tag="section" order="8" id="content" showDivTop="0" showDivBottom="0">
			<positions>
				<position group="left"  type="modules" style="ytmod" >left</position>
				<position group="main"  type="message"></position>
				<position group="main"  type="component">component</position>
				<position group="main"  type="modules" style="ytmod" >position3</position>
				<position group="right" type="modules" style="ytmod" >right</position>
			</positions>
		</content>
		<spotlight5 html5tag="section" order="9" id="yt_spotlight5">
			<positions>
				<position class="col-sm-12" type="modules" style="ytmod" >position4</position>
			</positions>
		</spotlight5>
		<spotlight6  html5tag="section" order="10" id="yt_spotlight6">
			<positions>
				<position class="col-sm-12" type="modules" style="ytmod" >position5</position>
			</positions>
		</spotlight6>
		<spotlight7  html5tag="section" order="11" id="yt_bottom">
			<positions>
				<position class="col-md-3" type="modules" style="ytmod" >bottom1</position>
				<position class="col-md-3" type="modules" style="ytmod" >bottom2</position>
				<position class="col-md-3" type="modules" style="ytmod" >bottom3</position>
				<position class="col-md-3" type="modules" style="ytmod" >bottom4</position>
			</positions>
		</spotlight7>
		<footer html5tag="footer" order="12" id="yt_footer">
			<positions>			
				<position class="col-sm-12" type="modules" style="ytmod" >footer</position>				
			</positions>
		</footer>
		<spotlight8  html5tag="section" order="13" id="copyright">
			<positions>
				<position class="col-sm-12" type="feature" style="ytmod" >@copyright</position>
			</positions>
		</spotlight8>
		<spotlight9  html5tag="section" order="14" id="spotlight9">
			<positions>
				<position class="col-sm-12" type="modules">popup</position>
			</positions>
		</spotlight9>
	</blocks>
</layout>		